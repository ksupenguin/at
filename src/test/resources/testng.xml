<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="trigonometry">
    <test thread-count="5" name="Trigonometry">

        <parameter name="a" value="0"/>
        <parameter name="b" value="1"/>
        <parameter name="div" value="0"/>

        <groups>
            <run>
                <include name="trigonometry"/>
                <include name="divZero"/>
            </run>
        </groups>

        <classes>
            <class name="trigonomerty.SinTest"/>
            <class name="trigonomerty.CosTest"/>
            <class name="trigonomerty.TgTest"/>
            <class name="trigonomerty.CtgTest"/>
            <class name="longs.DivLongTest"/>
        </classes>

    </test>
</suite>
